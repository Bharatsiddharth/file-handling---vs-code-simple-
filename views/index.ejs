<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link
    href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css"
    rel="stylesheet"
/>
</head>
<body>
  

  <div class="container">
    <div class="left-path">

      <form action="/createfile" method="post">
        <input type="text" placeholder="Enter file type with extension" name="filename">
      </form>

      <ul>
          <% files.forEach(function(file,idx){ %>
            <li> <a href='<%= file %>'><%= file %></a> 
              <a href='delete/<%= file %>'><i class="ri-close-circle-line"></i></a>
            </li>
            
          <% }) %>
      </ul>

    </div>

    

    <div class="right-path">
      <nav>
        <h2><%= filename %></h2> 
      </nav>


      <form action="/update/<%= filename %>" method="post">
        <textarea name="filedata" ><%= filedata%></textarea>
        <br>
        <button class="btn2">Save</button>
    </form>

    
      

    </div>
  </div>


</body>
</html>